[core]
  editor = vim
  pager = lv -c
  ui=auto
  excludesfile = ~/.gitignore

[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto

[include]
  path = ~/.gitconfig.local

[alias]
  st = status
  b = branch
  ba = branch -a
  br = branch -r
  stsb = status --short --branch
  cv = commit -v
  ci = commit
  co = checkout
  cb = checkout -b
  less = show
  cat = cat-file -p
  ll = log --stat --abbrev-commit
  lg = log --graph --all --pretty=format:'%x09%Cgreen%h %cn %Creset%s%Cred%d'
  l = log --pretty=format:\"%h (%an): %s\" --date=short -20
  ls = log --stat -p -1
  dcheck = diff --check
  d = diff
  dc = diff --cached
  dw = diff --word-diff
  rdiff = "!f() { git fetch; git diff origin/$1; }; f"
  ldiff = diff HEAD^..HEAD
  #pdiff = diff --patience
  #hdiff = diff --histogram
  #diff-ig-space = diff -ignore-space-change # ignore changes in amount of white space
  #diff-ig-lspace = diff --ignore-space-at-eol
  #diff-ig-submodule = diff --ignore-submodule=dirty
  bs = "!f() { git blame $1 | sort -b -k 3; }; f" # blame sort by date
