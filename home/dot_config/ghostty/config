keybind = ctrl+t>9=goto_tab:9
keybind = ctrl+t>0=goto_tab:10

# Splits (Regions)
keybind = ctrl+t>shift+s=new_split:down
keybind = ctrl+t>shift+Â¥=new_split:right
keybind = ctrl+t>shift+x=close_surface
keybind = ctrl+t>shift+q=toggle_split_zoom

# Navigation (Matched to dot_screenrc)
keybind = ctrl+t>j=goto_split:down
keybind = ctrl+t>k=goto_split:up
keybind = ctrl+t>down=goto_split:down
keybind = ctrl+t>up=goto_split:up
keybind = ctrl+t>left=goto_split:left
keybind = ctrl+t>right=goto_split:right
keybind = ctrl+t>t=goto_split:top
keybind = ctrl+t>b=goto_split:bottom
keybind = ctrl+t>tab=goto_split:next

# Resizing (Shift+Arrows)
keybind = ctrl+t>shift+k=resize_split:up,10
keybind = ctrl+t>shift+j=resize_split:down,10
keybind = ctrl+t>shift+h=resize_split:left,10
keybind = ctrl+t>shift+l=resize_split:right,10
